<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <!--Dialog Theme-->
    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--Recycler View Theme-->
    <style name="AppTheme.Light.RecyclerView" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/windowBackground</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light.CardView" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.ActionButton" parent="Widget.AppCompat.ActionButton">

    </style>

    <style name="AppTheme.Widget.Toolbar.SearchText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
    </style>
</resources>
